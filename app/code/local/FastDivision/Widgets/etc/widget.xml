<widgets>
    <widgets_catalog_bestseller type="widgets/catalog_bestseller" translate="name description">
        <name>Avalanche: Best Sellers Widget</name>
        <description type="desc"><![CDATA[Add a grid or list of the best selling products to your CMS page.]]></description>
        <parameters>
            <template translate="label description">
                <label>Frontend Template</label>
                <description>Choose how you want to showcase your best selling products.</description>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <grid translate="label">
                        <label>Product Grid</label>
                        <value>widgets/catalog/grid.phtml</value>
                    </grid>
                    <!--<list translate="label">
                        <label>Product List</label>
                        <value>widgets/catalog/bestseller_list.phtml</value>
                    </list>-->
                </values>
            </template>
            <title translate="label description">
                <label>Title</label>
                <description>Specify the widget's header title (optional). Defaults to "Best Sellers".</description>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </title>
            <display_count translate="label description">
                <label>Display Count</label>
                <description>Limit the number of products displayed (optional). Defaults to 5.</description>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </display_count>
            <category_id translate="label description">
                <label>Category ID</label>
                <description>Only show best sellers for a specified category ID (optional).</description>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>               
            </category_id>
        </parameters>
    </widgets_catalog_bestseller>
