<layout version="0.1.0">
	<catalog_product_view>
		<reference name="product.description">
			<block type="catalog/product_view" name="social.buttons" as="social-buttons" template="social/buttons.phtml"/>
		</reference>
		<reference name="product.info.right">
			<block type="catalog/product_view" name="social.buttons" as="social-buttons" template="social/buttons.phtml"/>
			<reference name="product.attributes">
				<block type="catalog/product_view" name="social.buttons" as="social-buttons" template="social/buttons.phtml"/>
			</reference>
		</reference>
	</catalog_product_view>
	<catalog_ajax_product_view>
		<reference name="product.info">
			<block type="catalog/product_view" name="social.buttons" as="social-buttons" template="social/buttons.phtml"/>
		</reference>
	</catalog_ajax_product_view>
</layout>